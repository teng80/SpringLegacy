<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<%-- ${pageContext.request.contextPath} => 프로젝트명 --%>
<c:set var="contextPath" value="${pageContext.request.contextPath}"  />
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript">
private int tno;
private String owner;
private String grade;
	$(function() {
		$("#checkJson").click(function() {
			var member={tno:"777", owner:"홍길동", grade:"337"};
		}); //end click function
		
		$.ajax({
			type:"post"
// 			프로젝트명+class @RequestMapping + method @RequestMapping
// 			spring_15/sample/ticket
			,url:"${contextPath}/sample/ticket"
			,contentType:"application/json"
// 				JSON.stringify : 객체를 json 문자열 형태로 변환
			,data:JSON.stringify(member)
			,sucess:function(data){}
			,error:function(data){
				alert("오류가 발생했습니다.")
			}			
		}); //end ajax 
	}); //end function
</script>
</head>
<body>
<!-- 	ticket_test.jsp!!! -->
	<input type="text" id="checkJson" value="회원 정보 보내기"><br>
</body>
